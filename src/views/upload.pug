extends base

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(placeholder="Title", name="title", required, type="text", maxlength="100")
        input(placeholder="Description", name="description", required, type="text", maxlength="200")
        input(placeholder="Hashtags", name="hashtags", required, type="text")
        input(type="submit", value="Upload")