extends base

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(name="username", placeholder="Nickname", type="text", required)
        input(name="password", placeholder="Password", type="password", required)
        input(type="submit", value="Join!")
    hr 
    div 
        span You don't have an account? 
        a(href="/join") Create Account &rarr;