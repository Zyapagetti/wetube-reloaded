doctype html
html(lang="ko")
    head
        title #{pageTitle} | #{siteName}
        link(rel="shortcut icon" href="https://cdn.worldvectorlogo.com/logos/pug.svg")
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body 
        header
            h1=pageTitle
            nav 
                ul 
                    li 
                        a(href="/") 🏠Home
                    if loggedIn 
                        li 
                            a(href="/users/logout") 🍒Logout
                        li 
                            a(href=`/${loggedInUser.id}`) 📂#{loggedInUser.name} | Profile
                    else 
                        li 
                            a(href="/join") ✨Join
                        li 
                            a(href="/login") 🍒Login
                    li 
                        a(href="/search") 🔍Search
                    li 
                        a(href="/videos/upload") 🎥Upload
        main
            block content
        include partials/footer